<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:id="@+id/llmain"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="41dp" >

        <ImageView
            android:id="@+id/iv_file"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="28dp"
            android:src="@drawable/files" />

        <TextView
            android:id="@+id/tv_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/songlist"
            android:textSize="25sp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_songlist"
        android:layout_width="match_parent"
        android:layout_height="391dp"
        android:layout_weight="0.42" >
    </ListView>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#6AAE9B" >

        <ImageView
            android:id="@+id/iv_musiclogo"
            android:layout_width="82dp"
            android:layout_height="65dp"
            android:layout_gravity="fill"
            android:src="@drawable/music" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tv_playsinger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="13dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_playname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>